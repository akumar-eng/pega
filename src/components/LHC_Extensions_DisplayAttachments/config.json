{
  "name": "LHC_Extensions_DisplayAttachments",
  "label": "LHC File And Documents",
  "description": "Display the attachments for a specific category (LHC Version)",
  "organization": "LHC",
  "version": "1.0.0",
  "library": "Extensions",
  "allowedApplications": [],
  "componentKey": "LHC_Extensions_DisplayAttachments",
  "type": "Widget",
  "subtype": "CASE",
  "properties": [
    {
      "name": "enableUpload",
      "label": "Enable file upload",
      "format": "BOOLEAN",
      "defaultValue": true
    },
    {
      "name": "heading",
      "label": "Heading",
      "format": "TEXT"
    },
    {
      "name": "useAttachmentEndpoint",
      "label": "Use the attachment endpoint",
      "format": "BOOLEAN"
    },
    {
      "name": "enableDownloadAll",
      "label": "Enable download all action",
      "format": "BOOLEAN"
    },
    {
      "name": "categories",
      "label": "Categories (comma-separated)",
      "format": "TEXT",
      "visibility": "($this.useAttachmentEndpoint = true)"
    },
    {
      "name": "dataPage",
      "label": "Data Page name",
      "format": "TEXT",
      "visibility": "($this.useAttachmentEndpoint = false)"
    },
    {
      "name": "iconName",
      "label": "Icon",
      "format": "SELECT",
      "defaultValue": "clipboard",
      "source": [
        {
          "key": "information",
          "value": "information"
        },
        {
          "key": "polaris",
          "value": "polaris"
        },
        {
          "key": "clipboard",
          "value": "clipboard"
        }
      ]
    },
    {
      "name": "displayFormat",
      "label": "Display format",
      "format": "SELECT",
      "defaultValue": "list",
      "source": [
        {
          "key": "list",
          "value": "List"
        },
        {
          "key": "tiles",
          "value": "Tiles"
        },
        {
          "key": "table",
          "value": "Table"
        }
      ]
    },
    {
      "name": "useLightBox",
      "label": "Show images using LightBox",
      "format": "BOOLEAN"
    },
    {
      "name": "groupBy",
      "label": "Group by (Table format only)",
      "format": "SELECT",
      "defaultValue": "none",
      "visibility": "($this.displayFormat = \"table\")",
      "source": [
        {
          "key": "none",
          "value": "No Grouping"
        },
        {
          "key": "category",
          "value": "Category"
        },
        {
          "key": "date",
          "value": "Date"
        }
      ]
    }
  ],
  "defaultConfig": {
    "heading": "List of attachments",
    "categories": "",
    "dataPage": "",
    "iconName": "clipboard",
    "useAttachmentEndpoint": true,
    "enableDownloadAll": false,
    "groupBy": "none"
  }
}
